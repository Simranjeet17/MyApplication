<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity2">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/KangrooImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/whatsapp_image_2022_07_12_at_5_31_43_pm">

            </ImageView>

            <RelativeLayout
                android:id="@+id/toprl1"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:layout_below="@id/KangrooImage"
                android:layout_centerVertical="true">

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_below="@id/KangrooImage"
                android:layout_marginHorizontal="20dp"
                android:elevation="8dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="10dp"
                        android:hint="  Username"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/black"
                        android:textSize="15sp">

                    </EditText>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/username"
                        android:background="#807E7E">

                    </View>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/view"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="10dp"
                        android:hint="  Email"
                        android:paddingHorizontal="5dp"
                        android:textColorHint="@color/black"
                        android:textSize="15sp">

                    </EditText>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/email"
                        android:background="#807E7E">

                    </View>

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/view1"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_baseline_smartphone_24"
                        android:drawablePadding="10dp"
                        android:hint="  Phone no."
                        android:inputType="phone"
                        android:paddingHorizontal="5dp"
                        android:textColorHint="@color/black"
                        android:textSize="15sp">

                    </EditText>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/phone"
                        android:background="#807E7E">

                    </View>

                    <EditText
                        android:id="@+id/passsword"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/view2"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                        android:drawablePadding="10dp"
                        android:hint="  Password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="5dp"
                        android:visibility="visible"
                        android:textColorHint="@color/black"
                        android:textSize="15sp">

                    </EditText>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/passsword"
                        android:background="#807E7E">

                    </View>

                    <EditText
                        android:id="@+id/confirmpass"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/view3"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                        android:drawablePadding="10dp"
                        android:hint="  Confirm Password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="5dp"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24">

                    </EditText>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/btomRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toprl1"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                >

                <Button
                    android:id="@+id/register12"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape2"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </Button>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondbtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btomRl"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:gravity="center">

                <Switch
                    android:id="@+id/swwjw"
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:checked="false">

                </Switch>


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/swwjw"
                    android:paddingTop="2dp"
                    android:text="@string/btmstr"
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/bottomtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondbtt"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/btmstr2"
                android:textColor="@color/black"
                android:textSize="15sp">

            </TextView>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>